---
import Layout from '../layouts/Layout.astro';
import SplashScreen from '../components/SplashScreen.astro';
import Hero_2 from "../images/hero-2.jpg"
import Hero_3 from "../images/hero-3.jpg"
---

<Layout>
	<SplashScreen />

	<!-- Hero Section -->
	<section class="hero d-flex align-items-center justify-content-center">
		<div class="container hero-content">
			<h1 class="display-4 fw-bold text-secondary hero-special-text animate-on-scroll" data-animation="zoom-in">ONE OF A KIND BIRTHDAY</h1>
			<p class="lead animate-on-scroll" data-animation="fade-in" data-delay="1">A film crew, in a house at your choice, filming a surprise party</p>
			<a href="#" class="btn btn-danger me-2 animate-on-scroll" data-animation="fade-in" data-delay="1">Find Out More</a>
			<a href="#" class="btn btn-warning animate-on-scroll" data-animation="fade-in" data-delay="1">Contact Us</a>
		</div>
	</section>

	<!-- Features Section -->
	<section class="container py-5">
		<div class="row text-center">
			<div class="col-md-6 animate-on-scroll" data-animation="zoom-in">
				<img src={Hero_2.src} class="img-fluid rounded">
			</div>
			<div class="col-md-6 animate-on-scroll" data-animation="zoom-in">
				<img src={Hero_3.src} class="img-fluid rounded">
			</div>
		</div>
		<div class="row text-center mt-5 feature-icons animate-on-scroll" data-delay="0.5">
			<div class="col-md-3">
				<i class="bi bi-camera"></i>
				<h5>Title</h5>
				<p>Short description of the feature.</p>
			</div>
			<div class="col-md-3">
				<i class="bi bi-film"></i>
				<h5>Title</h5>
				<p>Short description of the feature.</p>
			</div>
			<div class="col-md-3">
				<i class="bi bi-lightbulb"></i>
				<h5>Title</h5>
				<p>Short description of the feature.</p>
			</div>
			<div class="col-md-3">
				<i class="bi bi-people"></i>
				<h5>Title</h5>
				<p>Short description of the feature.</p>
			</div>
		</div>
	</section>
</Layout>